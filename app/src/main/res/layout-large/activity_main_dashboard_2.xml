<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_general"
    tools:context="com.trl.wholesome.ActivityMainDashboard">


    <LinearLayout
        android:id="@+id/linearMainInsider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relInsider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCalculators"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_calc"
                 />

            <TextView
                android:id="@+id/txtCalculators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="CALCULATORS"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/imgCalculators"
                android:layout_toRightOf="@+id/imgCalculators"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Combinations of veriours health calculators for the measurement of your body fitness."
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/five"
                android:layout_alignLeft="@+id/txtCalculators"
                android:layout_below="@+id/txtCalculators"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relInsider2"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgIntake"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_intake"
                 />

            <TextView
                android:id="@+id/txtIntake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="INTAKE"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/imgIntake"
                android:layout_toRightOf="@+id/imgIntake"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Collection of calories intake from the food dish of verious countries, various vegetables and fruits."
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/five"
                android:layout_alignLeft="@+id/txtIntake"
                android:layout_below="@+id/txtIntake"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relInsider3"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBurnDiary"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_burndiary"

                 />

            <TextView
                android:id="@+id/txtDiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="DIARY"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/imgBurnDiary"
                android:layout_toRightOf="@+id/imgBurnDiary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Contains Burned and Intake diaries which keeps track of your daily calories burned and calories intake."
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/five"
                android:layout_alignLeft="@+id/txtDiary"
                android:layout_below="@+id/txtDiary"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relInsider4"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCharts"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_chart"
                 />

            <TextView
                android:id="@+id/txtCharts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="CHART"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/imgCharts"
                android:layout_toRightOf="@+id/imgCharts"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Graphical representative curve of calories burned vs intake based on dairy's records for running week"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/five"
                android:layout_alignLeft="@+id/txtCharts"
                android:layout_below="@+id/txtCharts"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

